<article>
    <a href="/dashboard" class="back-dashboard"> &larr; Back to dashboard</a>
    <h2 class="edit-post-title">
        Edit Post
    </h2>
    <form class="edit-post-form">
        <div>
            <input name="post-title" type="text" class="edit-post-title-input" value="{{post.title}}" />
        </div>
        <div>
            <input name="post-body" type="text" class="edit-post-body-input" value="{{post.body}}" />
        </div>
        <div class="format-plural-wrapper">
            <a href="/post/{{post.id}}" class="format-plural">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit" class="save-post">Save post</button>
        <button type="button" class="delete-post-btn">Delete post</button>
    </form>
</article>

<form class="comment-form add-comment-form">
    <div>
        <textarea name="comment-body" class="edit-comment-body"></textarea>
    </div>
    <div>
        <button class="add-comment-button" type="submit">add comment</button>
    </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>