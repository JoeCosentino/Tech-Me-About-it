<ol>
    {{!-- the #each loops throw the 'posts' array and pulls out the neccessary
    objects --}}
    {{#each posts as |post|}}
    <li>
        <article>
            <div>
                <div>{{post.title}}</div>
                <div>{{post.body}}</div>
            </div>
            <div>
                <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
            </div>
        </article>
    </li>
    {{/each}}
</ol>